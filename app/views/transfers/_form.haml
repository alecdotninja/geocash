%h3 Available Balance
%h2=account.available_balance

= form_for transfer do |f|
  = render 'new_transfer_modal', f: f, modal_name: 'deposit', geocashes: geocashes
  = render 'new_transfer_modal', f: f, modal_name: 'withdrawal', geocashes: geocashes

= form_for transfer do |f|
  = f.text_field :confirmation_code
  = f.submit 'Submit', class: 'btn btn-secondary'

%button.btn.btn-primary{"data-target" => "#codeModal", "data-toggle" => "modal", :type => "button"} Current codes
#codeModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "codeModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title{id: "codeModalLabel"} Current codes
      .modal-body
        - account.transfers.unconfirmed.each do |ut|
          %table
            %thead
              %td Code
              %td Amount
              %td GeoCash uuids
            %tr
              %tu= ut.authorization_code
              %td= ut.amount
              %td= ut.geocash.id
      .modal-footer
        %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary{:type => "button"} Save changes
